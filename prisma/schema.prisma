generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Discount {
  id         String   @id
  created_at DateTime @default(now())
  updated_at DateTime
}

model Product {
  id             String   @id
  vendorUsername String
  images         String[]
  price          BigInt
  desc           String
  created_at     DateTime @default(now())
  updated_at     DateTime
  Vendor         Vendor   @relation(fields: [vendorUsername], references: [username])
  Review         Review[]
}

model Reservation {
  id         String   @id
  userId     String
  created_at DateTime @default(now())
  updated_at DateTime
  users      users    @relation(fields: [userId], references: [id])
}

model Review {
  id         String   @id
  userId     String
  productId  String
  rating     Int
  feedback   String
  created_at DateTime @default(now())
  updated_at DateTime
  Product    Product  @relation(fields: [productId], references: [id])
  users      users    @relation(fields: [userId], references: [id])
}

model Vendor {
  id         String       @id
  username   String       @unique
  userId     String       @unique
  created_at DateTime     @default(now())
  updated_at DateTime
  desc       String
  status     VendorStatus
  Product    Product[]
  users      users        @relation(fields: [userId], references: [id])
}

model users {
  id          String        @id
  username    String        @unique
  firstName   String?
  lastName    String?
  password    String
  email       String?       @unique
  phoneNo     String?
  avatar      String
  created_at  DateTime      @default(now())
  updated_at  DateTime
  Reservation Reservation[]
  Review      Review[]
  Vendor      Vendor?
}

enum VendorStatus {
  PENDING
  ACCEPTED
  BANNED
}
